pipeline {
  agent any
   stages {
    stage ('Clean') {
      steps {
        sh '''#!/bin/bash
        scp -o StrictHostKeyChecking=no setup.sh ubuntu@52.72.132.61:/home/ubuntu/
        ssh ubuntu@52.72.132.61 'bash -S < pkill.sh'
        '''
     }
   }
 stage ('Deploy') {
  steps {
     sh '''#!/bin/bash
     scp -o StrictHostKeyChecking=no setup.sh ubuntu@52.72.132.61:/home/ubuntu/
     ssh ubuntu@52.72.132.61 'bash -S < setup2.sh'
    '''
      }
    }
  }
}
